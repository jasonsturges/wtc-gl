{
  "name": "wtc-gl",
  "version": "0.2.0",
  "description": "ES6 Web GL library for 2D(ish) work.",
  "source": "src/wtc-gl.js",
  "main": "dist/wtc-gl.umd.js",
  "module": "dist/wtc-gl.module.js",
  "umd:main": "dist/wtc-gl.umd.js",
  "unpkg": "dist/wtc-gl.umd.js",
  "exports": {
    ".": "./dist/wtc-gl.modern.js"
