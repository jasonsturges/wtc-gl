{
  "name": "wtc-gl",
  "version": "1.0.0-beta.51",
  "description": "Typescript simple Web GL library.",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/wtc-gl.umd.cjs",
  "module": "./dist/wtc-gl.js",
  "scripts": {
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
    "dev": "vite",
    "build": "rm -rf dist; npm run lint:scripts && tsc && vite build",
    "lint:scripts": "eslint --fix --ext .ts --ignore-path .gitignore ./src/**/*",
    "preview": "vite preview",
    "document": "npx typedoc --tsconfig ./tsconfig.json"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "~6.9.0",
    "@typescript-eslint/parser": "~6.9.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "~8.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "typedoc": "~0.25.2",
    "typescript": "~5.2.2",
    "vite": "^4.4.5",
    "vite-plugin-glsl": "~1.1.2"
  },
  "dependencies": {
    "wtc-math": "^1.0.13"
  },
  "peerDependencies": {
    "wtc-math": "^1.0.13"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wethegit/wtc-gl.git"
  },
  "types": "dist/types.d.ts",
  "keywords": [],
  "homepage": "https://github.com/wethegit/wtc-gl#readme",
  "author": "Liam Egan <liam@wethecollective.com> (http://wethecollective.com)",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,js}": "eslint --fix",
    "src/**/*": "prettier -w -u"
  }
}
